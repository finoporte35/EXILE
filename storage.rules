rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite a cualquier usuario leer cualquier archivo público
    // Ejemplo: imágenes públicas, assets, etc.
    match /public/{allPaths=**} {
      allow read;
    }

    // Reglas para los avatares de usuario
    // Los usuarios solo pueden leer y escribir en su propia carpeta de avatares.
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Puedes añadir más reglas para otras rutas aquí
    // Ejemplo:
    // match /userFiles/{userId}/{fileName} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
